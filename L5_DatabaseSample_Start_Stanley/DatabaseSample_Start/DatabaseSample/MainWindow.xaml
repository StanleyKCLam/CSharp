<Window x:Class="DatabaseSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseSample"
        mc:Ignorable="d"
        Title="Login" Height="220.922" Width="525" FontSize="24">
    <Grid>
        <Label x:Name="lblUserName" Content="UserName:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="186,14,0,0" VerticalAlignment="Top" Width="255"/>
        <Label x:Name="lblPassword" Content="Password:" HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="186,65,0,0" VerticalAlignment="Top" Width="255"/>
        <Button x:Name="btnRegister" Content="Register" HorizontalAlignment="Left" Margin="186,104,0,0" VerticalAlignment="Top" Width="120" Click="btnRegister_Click"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="321,104,0,0" VerticalAlignment="Top" Width="120" Click="btnLogin_Click"/>

    </Grid>
</Window>
