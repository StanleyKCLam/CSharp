<Window x:Class="L4Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L4Sample"
        mc:Ignorable="d"
        Title="Login" Height="190.023" Width="454.35" FontSize="24">
    <Grid>
        <Label x:Name="lblUsername" Content="Username:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPassword" Content="Password:" HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="149,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" KeyDown="txtUsername_KeyDown"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="149,65,0,0" VerticalAlignment="Top" Width="250" PasswordChar="*" KeyDown="txtPassword_KeyDown"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="274,104,0,0" VerticalAlignment="Top" Width="125" Click="btnLogin_Click"/>

    </Grid>
</Window>
